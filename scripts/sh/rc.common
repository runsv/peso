## check a given return value
ev_ret () {
  local r=${1:-$?}

  if test 0 -eq "$r" ; then
    echo -e "\tOK"
  else
    echo -e "\tFAILED"
  fi

  return 0
}

## reverse a given "list"
## (a string containing a white space separated sequence of substrings)
rev () {
  if test 0 -lt "$#" ; then
    local i r=

    for i in ${1:-} ; do
      r="$i $r"
    done

    echo $r
  fi
}

